<% layout("/layouts/boilerplate") %>

<style>
  /* This new container will hold both the filters and the tax toggle */
  .filter-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  /* This container holds all your filter icons */
  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem; /* Added gap for better spacing */
    justify-content: flex-start; /* Aligns filters to the left */
    align-items: center;
  }

  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.3s ease; /* Added a smooth transition for hover effect */
  }

  .filter:hover, .filter.active {
    opacity: 1;
    color: #fe424d; /* Highlight active filter */
    border-bottom: 2px solid #fe424d;
  }
  .filter.active {
      color: #fe424d;
  }
  
  .filter p {
    color: inherit;
  }

  .tax-info {
    display: none;
  }

  #tax-toggle {
    display: flex; /* Made it a flex container to center the content */
    align-items: center;
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 0 1rem; /* Adjusted padding for better vertical centering */
  }
</style>

<div class="container mt-4">
  <div class="filter-bar">
    <div id="filters">
      <div class="filter" data-category="trending">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter" data-category="rooms">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter" data-category="iconic cities">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </div>
      <div class="filter" data-category="mountains">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter" data-category="castles">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter" data-category="pools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pools</p>
      </div>
      <div class="filter" data-category="camping">
        <div><i class="fa-solid fa-fire-burner"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter" data-category="arctic">
        <div><i class="fa-solid fa-snowman"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter" data-category="forests">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Forests</p>
      </div>
      <div class="filter" data-category="miscellaneous">
        <div><i class="fa-solid fa-ellipsis"></i></div>
        <p>Miscellaneous</p>
      </div>
    </div>
    <div id="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" unchecked>
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
    <% for (let listing of allListings) { %>
      <div class="col">
        <div class="card h-100">
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <img 
              src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=60' %>" 
              class="card-img-top" 
              alt="listing_image" 
              style="height: 20rem; object-fit: cover;"
            >
          </a>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b> <br />
              â‚¹ <%= (typeof listing.price === "number" ? listing.price.toLocaleString("en-IN") : "N/A") %>/night
              <i class="tax-info"> &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("change", function() {
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo) { 
      if(taxSwitch.checked) { 
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });

  document.addEventListener('DOMContentLoaded', () => {
      const filters = document.querySelectorAll('.filter');

      // Check URL on page load and highlight active filter
      const urlParams = new URLSearchParams(window.location.search);
      const activeCategory = urlParams.get('category');
      if (activeCategory) {
          filters.forEach(filter => {
              if (filter.getAttribute('data-category') === activeCategory) {
                  filter.classList.add('active');
              }
          });
      }

      // Add click event listener to each filter
      filters.forEach(filter => {
          filter.addEventListener('click', () => {
              const category = filter.getAttribute('data-category');
              // This is the fix: read the URL parameters again on each click
              const currentUrlParams = new URLSearchParams(window.location.search);
              const currentCategory = currentUrlParams.get('category');
              
              if (category === currentCategory) {
                  // If clicking the same category, remove the filter
                  window.location.href = '/listings';
              } else {
                  // If clicking a different category, apply the new filter
                  window.location.href = `/listings?category=${category}`;
              }
          });
      });
  });
</script>
