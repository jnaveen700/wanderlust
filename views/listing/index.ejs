    border-radius: 8px 8px 0 0;
  }

  .card-body {
    padding: 12px;
  }

  .listing-location {
    font-size: 0.85rem;
  }

  .listing-price {
    display: block;
    margin-top: 4px;
  }

  .category-tag {
    font-size: 0.75rem;
    padding: 4px 8px;
  }
