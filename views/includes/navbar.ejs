<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchForm = document.getElementById('search-form-nav');
    const searchInput = document.getElementById('search-input-nav');
    const aiGuideBtn = document.getElementById('ai-guide-btn');

    // Function to perform AI search
    async function performAISearch() {
      const userPreferences = searchInput.value.trim();
      
      if (!userPreferences) {
        alert('Please enter your travel preferences');
        return;
      }

      // Show loading state
      aiGuideBtn.disabled = true;
      const originalHTML = aiGuideBtn.innerHTML;
      aiGuideBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

      try {
        const response = await fetch('/ai-recommendations', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ userPreferences })
        });

        const data = await response.json();

        if (data.success) {
          // Redirect to the AI-generated search results
          window.location.href = data.redirect;
        } else {
          alert('Error: ' + (data.message || 'Could not process your preferences'));
        }
      } catch (error) {
        console.error('AI Guide Error:', error);
        alert('Error: Could not process your preferences');
      } finally {
        aiGuideBtn.disabled = false;
        aiGuideBtn.innerHTML = originalHTML;
      }
    }

    // AI Search Button Click
    if (aiGuideBtn) {
      aiGuideBtn.addEventListener('click', async function(event) {
        event.preventDefault();
        await performAISearch();
      });
    }

    // Enter key in search input triggers AI search
    if (searchInput) {
      searchInput.addEventListener('keypress', async function(event) {
        if (event.key === 'Enter') {
          event.preventDefault();
          await performAISearch();
        }
      });
    }

    // Prevent form submission (all searches go through AI)
    if (searchForm) {
      searchForm.addEventListener('submit', function(event) {
        event.preventDefault();
        performAISearch();
      });
    }

    // Restore search query from URL if it exists
    const urlParams = new URLSearchParams(window.location.search);
    const searchQuery = urlParams.get('query');
    if (searchQuery && searchInput) {
      searchInput.value = decodeURIComponent(searchQuery);
    }
  });
</script>
